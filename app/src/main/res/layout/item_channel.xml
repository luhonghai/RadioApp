<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/img_logo"
                android:layout_width="112dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                tools:background="@drawable/ic_channel_holder"
                android:padding="10dp"
                android:scaleType="centerInside"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_play_status"
                android:layout_toRightOf="@+id/img_logo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ラジオNIKKEI第1"
                    android:textColor="@color/txtDark"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_station_name"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ＨＢＣラジオ"
                    android:textColor="@color/txtDark2"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_station_name_ascii"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_play_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_play" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray2"
            />

    </LinearLayout>

</layout>